@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Book


<div class="book-card">
    <div onclick="location.href='@Url.Action("Details", "book" , new { id = Model.Id })'">
        @if (!string.IsNullOrEmpty(@Model.Cover))
        {
            <img src="@Model.Cover" alt="Okładka" />
        }
        <h3><strong>@Localizer["Title"]</strong> @Model.Title</h3>
        <p><strong>@Localizer["Author"]</strong> @Model.Author</p>
        <p><strong>@Localizer["Category"]</strong> @Model.Category</p>
    </div>
    <button class="btn btn-success add-to-cart" data-id="@Model.Id" onclick="">
        @Localizer["AddToCart"]
    </button>
</div>


